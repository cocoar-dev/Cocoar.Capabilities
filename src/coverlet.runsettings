<?xml version="1.0" encoding="utf-8" ?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <!-- Exclude entire test assemblies -->
          <Exclude>
            [Cocoar.Capabilities.Tests]*
            [Cocoar.Capabilities.Core.Tests]*
            [xunit.*]*
            [*.Tests]*
            [*.Test]*
          </Exclude>
          <!-- Include only production assemblies -->
          <Include>
            [Cocoar.Capabilities]*
            [Cocoar.Capabilities.Core]*
          </Include>
          <IncludeTestAssembly>false</IncludeTestAssembly>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>